            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30dp"
            android:text="1925, 1929, 1930, 1934, 1936, 1940, 1943
1945, 1949, 1958, 1970, 1982, 1983, 1985 1988, 1990, 1998, 2000, 2001, 2005 e 2009"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

</ScrollView>
