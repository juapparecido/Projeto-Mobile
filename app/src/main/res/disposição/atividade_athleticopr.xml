            android:textSize="18sp" />

        <TextView
            android:id="@+id/qtd_br_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30dp"
            android:text="1995"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/cp_sc_pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:text="Supercampeonato Paranaense:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tt_sc_pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="35dp"
            android:text="- 1 título"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/qtd_sc_pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30dp"
            android:text="2002"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/cp_pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:text="Campeonato Paranaense:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tt_cp_pr"
            android:layout_width="wrap_content"
