<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010329">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tt_Palmeiras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="114dp"
            android:background="#004f11"
            android:text="@string/Palmeiras"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:gravity="center|center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/pcpalmeiras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="144dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center|center_vertical"
            app:srcCompat="@drawable/ft_palmeiras" />


        <TextView
            android:id="@+id/cp_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:text="Campeonato ?:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

</ScrollView>
